<% if @users.present? %>
  <div class="bg-navy follow-height">
    <div class="container">
      <div class="row">
        <div class="col">
          <table class="table mt-5">
            <thead>
              <th class="table-color en-font-title">Account</th>
              <th class="table-color en-font-title">Reports</th>
              <th></th>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td class="table-color en-font-title"><%= user.account_name %></td>
                <td class="table-color en-font-title"><%= user.location_reports.count %></td>
                <% if user.is_followed_by?(current_user) %>
                    <td><%= link_to "フォロー解除する", public_user_relationships_path(user), class: "btn btn-outline-danger", method: :delete %></td>
                <% else %>
                    <td><%= link_to "フォロー", public_user_relationships_path(user), class: "btn btn-outline-light", method: :post %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col f-flex justify-content-center">
          <p><%= paginate @users%></p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="bg-navy follow-height">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="face table-color">
            <i style="font-size: 15rem; color: white;" class="mt-5 bi bi-emoji-dizzy"></i><br>
            <p>ユーザーがいないようです</p>
            <%= link_to "mypage", public_user_path(current_user), class: "btn btn-outline-light follow-btn"%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>