<%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :account_name %>
    <%= f.text_field :account_name %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_area :email  %>
  </div>
  <%= f.submit "提出する" %>
<% end %>