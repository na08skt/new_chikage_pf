<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6 mt-5">

      <main class="form-signin">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form>
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
              <%= f.email_field :email, class: "form-control", id: "floatingInput" ,placeholder: "name@example.com"%><br />
              <%= f.label :email ,for: "floatingInput"%>
            </div>

            <div class="form-floating">
              <%= f.password_field :password ,type: "password" ,class: "form-control" ,id: "floatingPassword" ,placeholder: "Password"%><br />
              <%= f.label :password, for: "floatingPassword"%>
            </div>

            <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>

          </form>
        <% end %>
      </main>
    </div>

    <div class="col-3"></div>

  </div>
</div>