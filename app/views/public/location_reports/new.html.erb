<% if current_user.id == 1 %>
  <%= render "layouts/caution"%>
<% else %>
  <div class="light-blue-bg location-new-height">
    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-center">

          <h1 class="white-font en-font-title location-new-title">CreateArticle</h1>
          <%= form_with model: @location_report, url: public_location_reports_path, method: :post do |f|%>
            <div class="form-group mt-5">
              <%= f.label :title, "Title", class: "white-font location-new-small" %>
              <%= f.text_field :title, placeholder: "タイトルを入力してください(制限文字数は15字です)", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :body, class: "white-font location-new-small"%>
              <%= f.text_area :body, placeholder: "本文記入欄です(制限文字数は50字です)", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :date, class: "white-font location-new-small" %>
              <%= f.date_select :date, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :event, class: "white-font location-new-small" %>
              <%= f.text_area :event, class: 'form-control', placeholder: 'もしあれば記入してください。（制限文字数は10字です）'%>
            </div>

            <div class="form-group">
              <!--プルダウン式で選択させたい=>f.select :OO,[["表示する文字”, "データベースに登録する値”]]-->
              <%= f.label :area, class: "white-font location-new-small" %>
              <%= f.select :area, [["北海道", "北海道"], ["東北", "東北"],["関東","関東"],["東海","東海"],
              ["甲信越","甲信越"],["北陸","北陸"],["関西","関西"],["中国（山陰山陽）","中国（山陰山陽）"],
              ["四国","四国"],["九州","九州"],["沖縄","沖縄"]], class: "form_control" %>
            </div>
            <div class="form-group">
              <%= f.label :address, class: "white-font location-new-small" %>
              <%= f.text_field :address, class: "form_control address", placeholder: "〇〇県△△市XXXX", class: "form-control"%>
              <p class="white-font ja-font mt-1 location-new-caution">*入力された住所によって、表示されない場合がありますので、なるべく正確な住所のご入力にご協力お願いします</p>
            </div>

            <div class="form-group">
              <%= f.label :image, class: "white-font location-new-small" %>
              <%= f.file_field :image, class: "form_control_file"%>
            </div>

            <%= f.submit "投稿する", class: "btn btn-outline-light location-new-btn mt-2" %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
<% end %>