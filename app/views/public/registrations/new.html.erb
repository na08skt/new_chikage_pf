<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <div class="form-signin sign-xx">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <h1 class="h3 fw-normal">Sign up</h1>

          <div class="field">
            <%= f.label :account_name, "account_name" %><br />
            <%= f.text_field :account_name, placeholder: "ex:chikage_user", class: "form-control mb-2", autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :email, "email"%><br />
            <%= f.email_field :email, placeholder: "ex:chikage_user", class: "form-control mb-2" %>
          </div>

          <div class="field">
            <%= f.label :password, "password"%><br>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "(#{@minimum_password_length}characters minimum)", class: "form-control mb-2"%>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "please again",autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-outline-dark mt-4" %>
          </div>
        <% end %>

      </div>
    </div>

    <div class="col-6 reverse-side ">
      <p><%= link_to "chikage", public_top_path, class: "logout-font"%></p>
      <p><%= link_to "access to reports", public_location_reports_path, class: "btn btn-outline-info logout_reports_btn" %></p><br>
    </div>
  </div>
</div>